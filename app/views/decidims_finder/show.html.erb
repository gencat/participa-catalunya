<% add_decidim_meta_tags({
  description: t("decidims_finder_page.description", scope: "participacatalunya")
}) %>

<%= stylesheet_link_tag 'decidims_finder' %>
<script type="text/javascript">
  window.I18n = <%= current_translations.to_json.html_safe %>
  window.algolia = <%= Rails.application.secrets.algolia.to_json.html_safe %>
</script>

<div class="row columns" id="finder-header">
  <div class="title-action">
    <div class="row collapse">
      <h3 class="title-action__title section-heading"><%= t("menu.decidims_finder", scope: "participacatalunya") %></h3>
    </div>
  </div>
</div>

<section class="padding-xs padding-sm padding-md" id="finder">
  <article class="container">
    <div class="row">

      <div class="columns mediumlarge-4 large-3">

        <div class="card card--secondary show-for-mediumlarge">
          <div class="filters">
            <form id="search-form" class="pd-15 listForm in" method="get" action="/finder/" onsubmit="return false;">
              <div class="filters__section">
                <div id="clear_button" class="pull-right"></div>
                <label class="mini-title" for="query"><%= t("decidims_finder_page.txt", scope: "participacatalunya") %></label>
                <input type="search" name="q" id="query" title="<%= t("decidims_finder_page.query_title", scope: "participacatalunya") %>" class="form-control" />
              </div>
              <div id="territory" class="filters__section">
                <fieldset>
                  <legend class="mini-title">
                  <%= t("decidims_finder_page.territory", scope: "participacatalunya") %>
                  </legend>
                  <div class="panel-body-finder"></div>
                </fieldset>
              </div>

              <div id="start_date" class="filters__section">
                <fieldset>
                  <legend class="mini-title">
                    <%= t("decidims_finder_page.start_date", scope: "participacatalunya") %>
                  </legend>
                  <div class="panel-body-finder"></div>
                </fieldset>
              </div>
              <div id="end_date" class="filters__section">
                <fieldset>
                  <legend class="mini-title">
                    <%= t("decidims_finder_page.end_date", scope: "participacatalunya") %>
                  </legend>
                  <div class="panel-body-finder"></div>
                </fieldset>
              </div>
            </form>
          </div>
        </div>
      </div>
      <div class="columns mediumlarge-8 large-9">
        <div class="row small-up-1 medium-up-2 card-grid">
          <p id="stats" class="txt_result"></p>
          <div id="hits"></div>
          <div class="column pagination">
            <div id="pagination"></div>
          </div>
        </div>
      </div>
    </div>
  </article>
</section>
<!-- TEMPLATES instantsearch -->
<script type="text/html" id="hit-template">
  <div class="column">
    <div class="card card--course">
      <div class="card__content">
        <div class="card__header">
          <a class="card__link" target="_new" href="{{url}}">
            <div class="card__title">{{title}}</div>
          </a>
        </div>
        <div class="card__text">
          <p>{{{description}}}</p>
        </div>
      </div>
      <div class="card__icondata">
        <ul class="card-data">
          <li class="card-data__item">
            <%= icon "meetings", class: "icon--big", role: "img", "aria-hidden": true %>
          </li>
          <li class="card-data__item">
            <div class="text-left">
              <div class="card__icondata">{{entity}}</div>
            </div>
          </li>
          <li class="card-data__item">
            <%= icon "datetime", class: "icon--big", role: "img", "aria-hidden": true %>
          </li>
          <li class="card-data__item">
            <p>{{start_date}} - {{end_date}}</p>
          </li>
        </ul>
      </div>
    </div>
  </div>

</script>
<script type="text/html" id="no-results-template">
  <div class="callout warning">
    <p><%= raw t("decidims_finder_page.no_results", scope: "participacatalunya") %></p>
  </div>

</script>
<script type="text/html" id="stats-template">
<%= raw t("decidims_finder_page.results", scope: "participacatalunya") %>
</script>
<!-- END TEMPLATES instantsearch -->

<!-- Search engine specific scripts -->
<script src="//cdn.jsdelivr.net/instantsearch.js/1/instantsearch.min.js"></script>
<%= javascript_include_tag 'dates-range-widget' %>
<%= javascript_include_tag 'decidims_finder' %>