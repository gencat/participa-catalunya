<% content_for :secondary_nav do %>
  <div class="secondary-nav secondary-nav--subnav">
    <ul>
      <% if allowed_to?(:read, :course_list) %>
        <li <% if is_active_link?(decidim_admin_courses.courses_path) %> class="is-active" <% end %>>
          <%= aria_selected_link_to I18n.t("menu.courses", scope: "decidim.admin"), decidim_admin_courses.courses_path %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= render "layouts/decidim/admin/application" do %>
  <div class="process-title">
    <div class="process-title-content">
      <%= link_to t("decidim.admin.titles.courses"), decidim_courses.courses_path, target: "_blank" %>
    </div>
  </div>

  <div class="process-content">
    <%= yield %>
  </div>
<% end %>
