<%= decidim_form_for(@form, html: { class: "form edit_course course_form_admin" }) do |f| %>
  <%= render partial: "form", object: f %>
  <div class="button--double form-general-submit">
    <%= f.submit t("courses.edit.update", scope: "decidim.admin"), class: "button" %>

    <% if allowed_to? :publish, :course, course: current_course %>
      <% if current_course.published? %>
        <%= link_to t("actions.unpublish", scope: "decidim.admin"), course_publish_path(current_course), method: :delete, class: "button muted" %>
      <% else %>
        <%= link_to t("actions.publish", scope: "decidim.admin"), course_publish_path(current_course), method: :post, class: "button hollow" %>
      <% end %>
    <% end %>
  </div>
<% end %>
