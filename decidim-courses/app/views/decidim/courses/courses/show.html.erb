<% add_decidim_meta_tags({
                           image_url: current_participatory_space.hero_image.url,
                           description: translated_attribute(current_participatory_space.description),
                           url: course_url(current_participatory_space),
                           twitter_handler: current_organization.twitter_handler
                         }) %>

<%
  edit_link(
    resource_locator(current_participatory_space).edit,
    :update,
    :course,
    course: current_participatory_space
  )
%>

<%= participatory_space_floating_help %>

<% if current_participatory_space.private_space? %>
  <%= render partial: "decidim/shared/private_participatory_space",
             locals: { text: t("private_space", scope: "decidim.participatory_processes.show") } %>
<% end %>

<div class="row column">
  <div class="row">
    <div class="columns medium-7 mediumlarge-8">
      <div class="section">
        <div class="lead">
          
        </div>
        <%= decidim_sanitize translated_attribute(current_participatory_space.description) %>

      </div>

      <%= attachments_for current_participatory_space %>

      <%= render_hook(:participatory_space_highlighted_elements) %>

    
    </div>

    <div class="section columns medium-5 mediumlarge-4 large-3">
      <div class="card extra">
        <div class="card__content">
          <%= render partial: "decidim/shared/follow_button", locals: { followable: current_participatory_space, large: false  } %>
        </div>
      </div>
      <div class="card extra definition-data">
        <% if translated_attribute(current_participatory_space.scope).present? %>
          <div class="definition-data__item scope">
            <span class="definition-data__title"><%= t("scope", scope: "decidim.courses.show") %></span>
            <%= translated_attribute(current_participatory_space.scope) %>
          </div>
        <% end %>

        <% if current_participatory_space.course_date.present? %>
          <div class="definition-data__item course_date">
            <span class="definition-data__title"><%= t("course_date", scope: "decidim.courses.show") %></span>
            <%= l current_participatory_space.course_date, format: :decidim_short %>
          </div>
        <% end %>

        <% if current_participatory_space.duration.present? %>
          <div class="definition-data__item duration">
            <span class="definition-data__title"><%= t("duration", scope: "decidim.courses.show") %></span>
            <%= current_participatory_space.duration %>
          </div>
        <% end %>
      </div>
      <%= resource_reference(current_participatory_space) %>
      <%= render partial: "decidim/shared/share_modal" %>
      <%#= embed_modal_for course_widget_url(current_participatory_space, format: :js) %>
    </div>
  </div>

  <% if current_participatory_space.show_statistics? %>
    <%= render partial: "statistics" %>
  <% end %>
</div>
