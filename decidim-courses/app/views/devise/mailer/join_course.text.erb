<%= t("devise.mailer.invitation_instructions.hello", email: @resource.name) %>

<%= t("decidim.courses.admin.invite_join_course_mailer.invite.invited_you_to_join_a_course", invited_by: @resource.invited_by.name, application: @resource.organization.name) %>

<%= link_to t("devise.mailer.invitation_instructions.accept"), accept_invitation_url(@resource, invitation_token: @token, invite_redirect: Decidim::EngineRouter.main_proxy(@opts[:course]).course_course_registration_path(course_slug: @opts[:course]), host: @resource.organization.host) %>

<% if @resource.invitation_due_at %>
<%= t("devise.mailer.invitation_instructions.accept_until", due_date: l(@resource.invitation_due_at, format: :long)) %>
<% end %>

<%= t("devise.mailer.invitation_instructions.ignore").html_safe %>
